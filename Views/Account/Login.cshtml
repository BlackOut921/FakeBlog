@using FakeBlog.Models.Account
@model FakeBlogUserLoginModel

@{
	ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center h-100">
	<form method="post" class="border p-3 bg-light mx-auto blog-login-form"
		  asp-controller="Account" asp-action="Login">
		<h1 class="display-1 text-center">@ViewData["Title"]</h1>
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="mb-3">
			<label asp-for="@Model.Username" class="form-label">Username</label>
			<input asp-for="@Model.Username" class="form-control" required />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Password" class="form-label">Password</label>
			<input asp-for="@Model.Password" class="form-control" required />
			<a href="#">Forgot Password?</a>
		</div>
		<div class="mb-3">
			<input asp-for="@Model.RememberMe" type="checkbox" class="form-check-input" />
			<label asp-for="@Model.RememberMe" class="form-check-label">Remember me</label>
		</div>
		<input type="submit" value="Login" class="btn btn-primary w-100" />
		<hr />
		<p class="text-center">Don't have an account?</p>
		<a asp-controller="Account" asp-action="Register" class="btn btn-outline-dark mb-3 w-100">Register</a>
	</form>
</div>