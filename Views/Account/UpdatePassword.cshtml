@using FakeBlog.Models.Account
@model FakeBlogUpdatePasswordModel

@{
	ViewData["Title"] = "Update Password";
}

<h1 class="display-1">@ViewData["Title"]</h1>
<form method="post" asp-controller="Account" asp-action="UpdatePassword">
	<div asp-validation-summary="All" class="text-danger"></div>
	<div class="mb-3">
		<label asp-for="@Model.CurrentPassword" class="form-label">Current Password</label>
		<input asp-for="@Model.CurrentPassword" class="form-control" required />
	</div>
	<div class="mb-3">
		<label asp-for="@Model.NewPassword" class="form-label">New Password</label>
		<input asp-for="@Model.NewPassword" class="form-control" required />
	</div>
	<div class="mb-3">
		<label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
		<input asp-for="@Model.ConfirmPassword" class="form-control" required />
	</div>
	<input type="submit" value="Update password" class="btn btn-primary" />
</form>