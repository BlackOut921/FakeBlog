@using FakeBlog.Models.Blog
@model IEnumerable<FakeBlogModel>

@{
	ViewData["Title"] = "My Blogs";
}

<h1 class="display-1">@ViewData["Title"]</h1>
<div class="text-center mb-3">
	<a asp-controller="Blog" asp-action="Create" title="Create new blog" class="btn btn-dark">
		<i class="bi bi-plus"></i>
	</a>
</div>

@if (Model.Count() == 0)
{
	<p class="lead text-center">No blogs</p>
}
else
{
	<div class="d-flex flex-row flex-wrap justify-content-center gap-3">
		@foreach (FakeBlogModel blog in Model)
		{
			@await Html.PartialAsync("_PartialBlogThumbnail", blog)
		}
	</div>
}