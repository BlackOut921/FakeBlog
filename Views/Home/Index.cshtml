@using FakeBlog.Models.Blog
@model IEnumerable<FakeBlogModel>

@{
	ViewData["Title"] = "Home Index";
}

<h1 class="display-1">@ViewData["Title"]</h1>
<div class="text-muted">
	<p class="lead">Database is hosted at <a href="http://webtest921.somee.com">webtest921.somee.com</a></p>
</div>

@if (Model != null)
{
	@if (Model.Count() > 0)
	{
		<h2 class="display-2">Recent Posts</h2>
		<div class="row row-cols-2 row-cols-lg-4 row-gap-3">
			@foreach (FakeBlogModel blog in Model)
			{
				<div class="col">
					@await Html.PartialAsync("_PartialBlogThumbnail", blog)
				</div>
			}
		</div>
	}
	else
	{
		<p class="lead text-danger text-center">No recent blogs posted</p>
	}
}