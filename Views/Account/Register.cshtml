@using FakeBlog.Models.Account
@model FakeBlogUserRegisterModel

@{
	ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center py-5">
	<form method="post" enctype="application/x-www-form-urlencoded" class="border rounded-3 p-3 bg-light-subtle mx-auto blog-login-form"
		  asp-controller="Account" asp-action="Register">
		<h1 class="display-1 text-center">@ViewData["Title"]</h1>
		<div class="mb-3">
			<label asp-for="@Model.Username" class="form-label">Username</label>
			<input asp-for="@Model.Username" class="form-control" required />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.Password" class="form-label">Password</label>
			<input asp-for="@Model.Password" class="form-control" required />
		</div>
		<div class="mb-3">
			<label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
			<input asp-for="@Model.ConfirmPassword" class="form-control" required />
		</div>
		<input type="submit" value="Create new account" class="btn btn-primary w-100" />
		<hr />
		<p class="text-center">Already have an account?</p>
		<a asp-controller="Account" asp-action="Login" class="btn btn-outline-dark mb-3 w-100">Login</a>
		<div asp-validation-summary="All" class="text-danger"></div>
	</form>
</div>